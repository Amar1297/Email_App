<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeforprofile"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shinpro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_auto_start="true">
            <include layout="@layout/shimmar_profdemo"/>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewprof"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/circle_shape"
                android:contentDescription="@string/todo"
                app:layout_constraintBottom_toTopOf="@+id/nameprof"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/nameprof"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:text="Amar Jakkan"
                android:textSize="26dp"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_light"
                app:layout_constraintBottom_toTopOf="@+id/emailidprof"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/emailidprof"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginBottom="32dp"
                android:textAlignment="center"
                android:text="amarjakkan97@gmail.com"
                android:background="#ffffff"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent" />
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="132dp"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="294dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:src="@drawable/ic_baseline_settings_24"/>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:autofillHints=""
                    android:text="Setting"
                    android:textAlignment="center"
                    android:importantForAutofill="no"
                    android:background="#ffffff"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="30dp"
                    android:textStyle="bold|normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="294dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:src="@drawable/aboutus"/>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:autofillHints=""
                    android:text="About us"
                    android:importantForAutofill="no"
                    android:background="#ffffff"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="30dp"
                    android:textStyle="bold|normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="294dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:src="@drawable/star"/>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:autofillHints=""
                    android:text="Rate us"
                    android:textAlignment="center"
                    android:importantForAutofill="no"
                    android:background="#ffffff"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="30dp"
                    android:textStyle="bold|normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="294dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:src="@drawable/logout"/>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:autofillHints=""
                    android:text="Logout"
                    android:textAlignment="center"
                    android:importantForAutofill="no"
                    android:background="#ffffff"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="30dp"
                    android:textStyle="bold|normal" />


            </LinearLayout>

        </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>



</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>